[MESSAGES CONTROL]

# I0011: Locally disabling %s
# W0142: Used * or ** magic
# W0511: TODO in comments
# R0904: Too many public methods
# C0325: Unnecessary parens after 'print' keyword
disable=I0011,W0142,W0511,R0904,C0325

[REPORTS]

reports=no

msg-template={msg_id}:{line:3d},{column}:{msg}

[FORMAT]

max-line-length=79

ignore-long-lines=^.*((https?:)|(pragma:)|(TODO:)).*$
